<UserControl x:Class="WPF.UserControls.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.UserControls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <hc:TransitioningContentControl >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Border VerticalAlignment="Center" Margin="0,0,0,0" Background="{DynamicResource PrimaryBrush}" CornerRadius="10">
                <hc:LoadingCircle Style="{StaticResource LoadingCircleLight}" Margin="10" IsRunning="True"/>
            </Border>
        </StackPanel>
    </hc:TransitioningContentControl>
</UserControl>
